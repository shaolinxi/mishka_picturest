<% @pins.each do |pin| %>
  <%= link_to image_tag(pin.image.url(:medium)), pin %><br/>
  <%= pin.description %><br/>
  <% if pin.user == current_user %>
    <%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-default' %><br/>
    <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %><br/>
  <% end %>
<% end %>
