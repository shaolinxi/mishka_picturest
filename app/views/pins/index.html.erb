<div class="btn-group" role="group" aria-label>
  <p id="notice"><%= notice %></p>
  <div class="jumbotron">
    <h1>Pins & Pictures</h1>
    <div class="jumbotron">
    <table>
      <thead>
        <tr>
          <th>Picture</th>
          <th>Let's see what we have here at this moment...<br></th>
          <th colspan="3"></th>
        </tr>
      </thead>
        <br>
      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= image_tag pin.image.url (:medium) %></td>
            <td><%= pin.description %></td>
            <td><%= link_to 'Show', pin, class: 'btn btn-default' %></td>
              
            <% if pin.user == current_user %>
                <%= link_to edit_pin_path(pin) do %>
                  <td><button type="button" class="btn btn-default"> 'Edit' </button>&nbsp;</td>
                <% end %>
                <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <td><button type="button" class="btn btn-default"> 'Destroy' </button></td>
                <% end %>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    <%= link_to new_pin_path do %>
      <button type="button" class="btn btn-default"> 'New Pin' </button>
    <% end %>
  </div>
</div>